<!-- Dashboard Scripts -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const timeRangeSelect = document.getElementById('timeRangeSelect');
        let salesChart, topProductsChart, topCategoriesChart, topBrandsChart;

        // Initialize all charts
        function initializeCharts() {
            try {
                const chartData = JSON.parse('<%- JSON.stringify(chartData) %>' || '{}');

                salesChart = new Chart(
                    document.getElementById('salesChart').getContext('2d'),
                    {
                        type: 'line',
                        data: {
                            labels: chartData.chartLabels || [],
                            datasets: [
                                {
                                    label: 'Revenue (₹)',
                                    data: chartData.revenueData || [],
                                    borderColor: '#36A2EB',
                                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                                    borderWidth: 2,
                                    fill: true,
                                    yAxisID: 'y-revenue'
                                },
                                {
                                    label: 'Orders',
                                    data: chartData.ordersData || [],
                                    borderColor: '#FF6384',
                                    backgroundColor: 'rgba(255, 99, 132, 0.1)',
                                    borderWidth: 2,
                                    fill: true,
                                    yAxisID: 'y-orders'
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                'y-revenue': {
                                    type: 'linear',
                                    position: 'left',
                                    title: { display: true, text: 'Revenue (₹)' }
                                },
                                'y-orders': {
                                    type: 'linear',
                                    position: 'right',
                                    title: { display: true, text: 'Number of Orders' }
                                }
                            },
                            plugins: { legend: { position: 'top' } }
                        }
                    }
                );

                topProductsChart = new Chart(
                    document.getElementById('topProductsChart').getContext('2d'),
                    {
                        type: 'doughnut',
                        data: {
                            labels: chartData.topProductLabels || [],
                            datasets: [{
                                data: chartData.topProductData || [],
                                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF']
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        boxWidth: 12,
                                        font: { size: 11 }
                                    }
                                }
                            }
                        }
                    }
                );

                topCategoriesChart = new Chart(
                    document.getElementById('topCategoriesChart').getContext('2d'),
                    {
                        type: 'doughnut',
                        data: {
                            labels: chartData.topCategoryLabels || [],
                            datasets: [{
                                data: chartData.topCategoryData || [],
                                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF']
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        boxWidth: 12,
                                        font: { size: 11 }
                                    }
                                }
                            }
                        }
                    }
                );

                topBrandsChart = new Chart(
                    document.getElementById('topBrandsChart').getContext('2d'),
                    {
                        type: 'doughnut',
                        data: {
                            labels: chartData.topBrandLabels || [],
                            datasets: [{
                                data: chartData.topBrandData || [],
                                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF']
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        boxWidth: 12,
                                        font: { size: 11 }
                                    }
                                }
                            }
                        }
                    }
                );

                console.log('Chart Data:', chartData);
            } catch (error) {
                console.error('Error initializing charts:', error);
            }
        }

        // Update sales chart based on time range
        function updateSalesChart(range) {
            fetch(`/admin/dashboard/chart-data?range=${range}`)
                .then(response => response.json())
                .then(data => {
                    salesChart.data.labels = data.chartLabels || [];
                    salesChart.data.datasets[0].data = data.revenueData || [];
                    salesChart.data.datasets[1].data = data.ordersData || [];
                    salesChart.update();
                })
                .catch(error => console.error('Error updating chart:', error));
        }

        // Handle select change
        timeRangeSelect.addEventListener('change', function() {
            const range = this.value;
            timeRangeSelect.options[timeRangeSelect.selectedIndex].text = range.charAt(0).toUpperCase() + range.slice(1);
            updateSalesChart(range);
        });

        // Initialize charts and load default data
        initializeCharts();
        updateSalesChart('yearly');

        // Download Report
        document.getElementById('downloadReport').addEventListener('click', function() {
            const myModal = new bootstrap.Modal(document.getElementById('generateReportModal'));
            myModal.show();
        });

        document.getElementById('reportType').addEventListener('change', function() {
            const customDateFields = document.getElementById('customDateFields');
            customDateFields.style.display = this.value === 'custom' ? 'block' : 'none';
        });

        document.getElementById('generateReportBtn').addEventListener('click', function() {
            const reportType = document.getElementById('reportType').value;
            const reportFormat = document.getElementById('reportFormat').value;
            let downloadUrl = `/admin/download-report?reportType=${reportType}&reportFormat=${reportFormat}`;
            
            if (reportType === 'custom') {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                if (!startDate || !endDate) {
                    alert('Please select both start and end dates');
                    return;
                }
                downloadUrl += `&startDate=${startDate}&endDate=${endDate}`;
            }
            
            const link = document.createElement('a');
            link.href = downloadUrl;
            link.target = '_blank';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            bootstrap.Modal.getInstance(document.getElementById('generateReportModal')).hide();
        });
    });
</script>

