                    let originalPrice = product.combos[0].regularPrice;
                    let salePriceBeforeDiscount = product.combos[0].salesPrice;
                    let newSalesPrice = salePriceBeforeDiscount - (salePriceBeforeDiscount * (effectiveOffer / 100));
