<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <!-- CSS LINK -->
    <link rel="stylesheet" href="assets/css/user/signup.css">
    <!-- Boxicons CSS LINK -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- GoalZone Welcoming Message -->
        <div class="logo">
            <span class="goal">Goal</span><span class="zone">Zone</span>
        </div>
        <form id="signform" action="/signup" method="POST" onsubmit="return signupValidation()">
            <h1>Register</h1>
            <div id="error1" class="error-message"></div>
            <div class="input-box">
                <input class="form-control" type="text" name="name" id="signup_name" placeholder="Username" >
                <i class='bx bxs-user'></i>
            </div>

            <div id="error2" class="error-message"></div>
            <div class="input-box">
                <input class="form-control" type="text" name="email" id="signup_email" placeholder="example@gmail.com" >
                <i class='bx bxs-envelope'></i>
            </div>

            <div id="error3" class="error-message"></div>
            <div class="input-box">
                <input class="form-control" type="password" name="password" id="password" placeholder="********" >
                <i class='bx bxs-lock-alt'></i>
            </div>

            <div id="error4" class="error-message"></div>
            <div class="input-box">
                <input class="form-control" type="password" name="confirm_password" id="signup_confirm_password" placeholder="********" >
                <i class='bx bxs-lock-alt'></i>
            </div>

            <button type="submit" class="btn">Register</button>
            <button class="btn" style="margin-top: 10px;"><a href="/auth/google" class="google-btn">Sign in with Google</a></button>

            <div class="register-link">
                <p>Already have an account? <a href="/login">Login</a></p>
            </div>
        </form>
    </div>

    <!--=============== SIGNUP JS ===============-->
    <script src="assets/js/user/signup.js"></script>

     <!--=============== JQUERY LINK ===============-->
     <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    
     <!--===============  BOOTSTRAP JS ===============-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</body>
</html>